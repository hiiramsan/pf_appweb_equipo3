<?xml version="1.0" encoding="UTF-8"?>
<web-app version="4.0" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd">
    <filter>
        <filter-name>FiltroAutenticacion</filter-name>
        <filter-class>filtros.FiltroAutenticacion</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>FiltroAutenticacion</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>registro</servlet-name>
        <servlet-class>servlets.Registro</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>principal</servlet-name>
        <servlet-class>servlets.principal</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>servlets.Logout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>uploadProfilePicture</servlet-name>
        <servlet-class>servlets.UploadProfilePicture</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Posts</servlet-name>
        <servlet-class>servlets.Posts</servlet-class>
        <multipart-config>
            <max-file-size>10485760</max-file-size>
            <!-- Max file size in bytes (10MB in this case) -->
            <max-request-size>20971520</max-request-size>
            <!-- Max request size -->
            <file-size-threshold>0</file-size-threshold>
            <!-- Threshold for file upload -->
        </multipart-config>
    </servlet>
    <servlet>
        <servlet-name>PostInfo</servlet-name>
        <servlet-class>servlets.PostInfo</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CommentsInfo</servlet-name>
        <servlet-class>servlets.CommentsInfo</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>registro</servlet-name>
        <url-pattern>/registro</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>/login.jsp</welcome-file>
    </welcome-file-list>
    <error-page>
        <error-code>400</error-code>
        <location>/errors/BadRequest.jsp</location>
    </error-page>
    <error-page>
        <error-code>502</error-code>
        <location>/errors/BadGateway.jsp</location>
    </error-page>
    <error-page>
        <exception-type>java.lang.NullPointerException</exception-type>
        <location>/errors/nullPointer.jsp</location>
    </error-page>
    <error-page>
        <error-code>404</error-code>
        <location>/errors/NotFound.jsp</location>
    </error-page>
    <error-page>
        <error-code>503</error-code>
        <location>/errors/ServiceUnavailable.jsp</location>
    </error-page>
    <servlet-mapping>
        <servlet-name>principal</servlet-name>
        <url-pattern>/principal</url-pattern>
        <url-pattern>/deletePost</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>uploadProfilePicture</servlet-name>
        <url-pattern>/uploadProfilePicture</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PostInfo</servlet-name>
        <url-pattern>/postInfo</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CommentsInfo</servlet-name>
        <url-pattern>/commentsInfo</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
